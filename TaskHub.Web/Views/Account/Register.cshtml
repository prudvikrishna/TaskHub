@model TaskHub.Web.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

@*<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Create a new account.</h2>
</hgroup>*@

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
 <div class="container">  
<div class="form-group">
    <h2 class="form-signin-heading">Create an new Account</h2>
              <div class="col-sm-8">@Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UserName)</div></div>
      <div class="form-group">
    
              <div class="col-sm-8">@Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)</div></div>

      <div class="form-group">
    
               <div class="col-sm-8">@Html.LabelFor(m => m.ConfirmPassword)
                   @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
               </div></div>
               
               <div class="col-sm-8">
             <input type="submit" value="Register" class="btn btn-primary"/>
                   </div>
       
  </div>
  
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
